<div class="mui-content">

  <div class="mui-card">
    <div class="mui-card-header mui-card-media" style="height:70vw;background-image:url(<%=@product.photo_url%>)">
    </div>

    <div class="mui-card-content">
      <div class="mui-card-content-inner">
        <p><%=@product.name%></p>
        <p style="color: #333;"><%=@product.desc%></p>
      </div>

      <div class="mui-card-footer">
        <span class="pro-price">
          <span class="price-info">
            <em class="price-yen">¥</em><em class="price-int"><%= @product.price_int %></em><em class="price-decimal">.<%=@product.price_cent %></em>
          </span>
          <%= icon('bullhorn','热销', class: 'price-tags') if @product.hot? %>
          <%= icon('bullhorn','新品', class: 'price-tags') if @product.fresh? %>
        </span>
      </div>
    </div>
    <div class="mui-card-footer">
      <button type="button" class="mui-btn mui-btn-danger mui-btn-outlined">
					加入心愿单
				</button>
      <button type="button" class="mui-btn mui-btn-danger">
					放入购物车
				</button>
    </div>
  </div>

