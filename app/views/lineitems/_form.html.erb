<%= simple_form_for @lineitem, :html => { :class => 'form-horizontal' } do |f| %>
  <%= f.association :product_id %>
  <%= f.input :amount %>
  <%= f.input :order_id %>
  <%= f.input :price %>
  <%= f.input :description %>

  <%= f.button :submit, :class => 'btn-primary' %>
  <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                lineitems_path, :class => 'btn btn-default' %>
<% end %>
