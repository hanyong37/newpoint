<%= simple_form_for @order, :html => { :class => 'form-horizontal' } do |f| %>
  <%= f.association :member, collection: Member.all.map{|m| [m.user.name, m.id]} %>
  <%= f.input :status %>
  <%= f.input :memo %>
  <%= f.input :address %>
  <%= f.input :feedback %>
  <%= f.input :stars, collection: 1..5, as: :radio_buttons %>
  <%= f.button :submit, :class => 'btn-primary' %>
  <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                orders_path, :class => 'btn btn-default' %>
<% end %>
