<%- model_class = Member -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:name) %>:</strong></dt>
  <dd><%= @member.name %></dd>
  <dt><strong><%= model_class.human_attribute_name(:mobile) %>:</strong></dt>
  <dd><%= @member.mobile %></dd>
  <dt><strong><%= model_class.human_attribute_name(:wxcode) %>:</strong></dt>
  <dd><%= @member.wxcode %></dd>
  <dt><strong><%= model_class.human_attribute_name(:validate_from) %>:</strong></dt>
  <dd><%= @member.validate_from %></dd>
  <dt><strong><%= model_class.human_attribute_name(:validate_to) %>:</strong></dt>
  <dd><%= @member.validate_to %></dd>
  <dt><strong><%= model_class.human_attribute_name(:address) %>:</strong></dt>
  <dd><%= @member.address %></dd>
</dl>

<%= link_to t('.back', :default => t("helpers.links.back")),
              admin_members_path, :class => 'btn btn-default'  %>
<%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_admin_member_path(@member), :class => 'btn btn-default' %>
<%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              admin_member_path(@member),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
