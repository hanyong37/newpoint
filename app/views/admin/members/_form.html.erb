<%= simple_form_for [:admin, @member ], :html => { :class => 'form-horizontal' } do |f| %>
  <%= f.input :name %>
  <%= f.association :membership, label: '会员卡' %>
  <%= f.input :mobile %>
  <%= f.input :address %>
  <%= f.input :default_ship_mobile %>
  <%= f.input :default_ship_address %>
  <%= f.input :default_ship_reciever %>
  <%= f.input :validate_from %>
  <%= f.input :validate_to %>

  <%= f.button :submit, :class => 'btn-primary' %>
  <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                admin_members_path, :class => 'btn btn-default' %>
<% end %>
