<%= simple_form_for @order,url:admin_orders_path , :html => { :class => 'form-horizontal' } do |f| %>
  <%= f.association :member, label: '会员' %>
  <%= f.input :status %>
  <%= f.input :memo %>
  <%= f.input :address %>
  <%= f.input :feedback %>
  <%= f.input :stars, collection: 1..5, as: :radio_buttons %>
  <%= f.button :submit, :class => 'btn-primary' %>
  <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                admin_orders_path, :class => 'btn btn-default' %>
<% end %>
